@page
@model MegaDeskWeb.Pages_Desks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Desk</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Desk.DeskId" />
            <div class="form-group">
                <label asp-for="Desk.width" class="control-label"></label>
                <input asp-for="Desk.width" class="form-control" />
                <span asp-validation-for="Desk.width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.depth" class="control-label"></label>
                <input asp-for="Desk.depth" class="form-control" />
                <span asp-validation-for="Desk.depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.drawerCount" class="control-label"></label>
                <input asp-for="Desk.drawerCount" class="form-control" />
                <span asp-validation-for="Desk.drawerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.MaterialId" class="control-label"></label>
                <select asp-for="Desk.MaterialId" class="form-control" asp-items="ViewBag.MaterialId"></select>
                <span asp-validation-for="Desk.MaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.RushOptionId" class="control-label"></label>
                <select asp-for="Desk.RushOptionId" class="form-control" asp-items="ViewBag.RushOptionId"></select>
                <span asp-validation-for="Desk.RushOptionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
