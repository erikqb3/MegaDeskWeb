            </div>  
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.drawerCount" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.drawerCount" min="0" max="7" class="form-control" />
                <span asp-validation-for="DeskQuote.Desk.drawerCount" class="text-danger"></span>
            </div>  
